<% include partials/head.ejs %>
    <title>Matches - Drinkerz</title>
</head>
<body>
        <% include partials/navigation.ejs%>
    <main>
      <section class="users__container">
        <h1 class="section__title">Matches</h1>
        <div class="card-grid grid--matches">
          <% for (let i = 0; i < matches.length; i++) { %>
            <article class="card">
                <% if (matches[i].profilePicture) { %>
                  <img src="<%= matches[i].profilePicture %>" alt="Profile image of <%= matches[i].firstName %>" class="card__img">
                <% } else { %>
                  <img src="./media/images/default_avatar.png" alt="Profile image of <%= matches[i].firstName %>" class="card__img">
                <% } %>
                <section class="card__meta-block">
                    <h3 class="card__meta-title"><%= matches[i].firstName + " " + matches[i].lastName %></h3>
                    <p>Age: <%= matches[i].age %></p>
                    <p>Favorite beer: <%= matches[i].beers[0].beer.name %> </p>
                </section>
            </article>
          <% } %>
        </div>
      </section>
      
    </main>
    <% include partials/footer.ejs %>
</body>
</html>
